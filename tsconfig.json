{
  "include": ["src/**/*"],
  "compilerOptions": {
    "types": ["node"],
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2022", "DOM"]
  },
  "ts-node": {
    "esm": true
  },
  "browser": {
    "[module-name]": false
  }
}
